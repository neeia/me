<style>
  div.container {
    padding: 36px;
    padding-top: 0;
  }
  @media screen and (max-width: 1200px) {
    div.container {
      padding: 16px;
      padding-top: 0;
    }
  }
  h2.quote {
    font-size: 1em;
    font-weight: 100;
    font-style: italic;
  }
  h2 {
    margin: 0;
    font-size: 1.5em;
  }
  p {
    max-width: 70ch;
    text-align: justify;
    text-indent: 2ch;
  }
  dl {
    display: grid;
    grid-template-columns: repeat(auto-fill, 96px 240px);
    max-width: 70ch;
    gap: 2px 12px;
    align-items: center;
  }
  di {
    padding: 6px 12px;
    width: 100%;
    color: white;
    background-color: crimson;
    box-sizing: border-box;
  }
  dd {
    margin: 0;
  }
</style>
