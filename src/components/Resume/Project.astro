---
export interface Props {
  name: string;
  url: Url;
  repo: Url;
  date: string;
}
interface Url {
  name: string;
  href: string;
}

const { name, url, repo, date } = Astro.props;
---

<li>
  <div>
    <h3>{name}</h3>
    <span>
      <a href={url.href} target="_blank" rel="noopener noreferrer">
        {url.name}
      </a>
    </span>
    <span>
      <a href={repo.href} target="_blank" rel="noopener noreferrer">
        {repo.name}
      </a>
    </span>
  </div>
  <div class="date">{date}</div>
  <ul>
    <slot />
  </ul>
</li>

<style>
  div {
    display: flex;
    align-items: baseline;
    gap: 1ch;
  }
  div > *:not(:first-child)::before {
    content: "|";
    font-size: larger;
  }

  h3 {
    margin: 0;
    font-size: 1.4em;
  }

  .date {
    font-size: 0.9em;
    line-height: 1;
  }

  ul {
    padding-left: 2.5ch;
    line-height: 1.25;
    margin-top: 0.75em;
    margin-bottom: 1.5em;
  }
</style>
