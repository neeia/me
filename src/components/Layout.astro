---
import BaseHead from "./BaseHead.astro";
import Header from "./Header.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import { Icon } from "astro-icon";
import { Tooltips } from "astro-tooltips";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <Tooltips interactive={false} delay={[50, 25]} placement="bottom" />
  </head>
  <body>
    <div class="backdrop" onclick="closeMenu()"></div>
    <Header />
    <main>
      <header class="title-container">
        <button class="menu-button" onclick="openMenu()">
          <Icon name="ic:round-menu" width="32px" height="32px" />
          <script type="text/javascript">
            function openMenu() {
              var menu = document.getElementById("menu-container");
              if (!menu) return;
              menu.dataset.open = "true";
              var backdrop = document.querySelector(".backdrop");
              if (!backdrop) return;
              backdrop.dataset.open = "true";
            }
            function closeMenu() {
              var menu = document.getElementById("menu-container");
              if (!menu) return;
              menu.dataset.open = "false";
              var backdrop = document.querySelector(".backdrop");
              if (!backdrop) return;
              backdrop.dataset.open = "false";
            }
          </script>
        </button>
        <h1>{title}</h1>
        <style>
          .menu-button {
            margin-left: 12px;
            border: none;
            background: none;
            margin-right: 1ch;
            color: crimson;
          }
          @media screen and (min-width: 1201px) {
            button {
              display: none;
            }
            h1 {
              margin-left: 1.5ch;
            }
          }
          .backdrop {
            background-color: #000;
            width: 100vw;
            height: 100vh;
            position: fixed;
            z-index: 999;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s ease-in-out;
          }
          .backdrop[data-open="true"] {
            opacity: 0.3;
            pointer-events: auto;
          }
          header.title-container {
            display: flex;
            margin-top: 2em;
            margin-bottom: 4px;
          }
          h1 {
            margin-bottom: 0;
            margin-top: 0;
          }
        </style>
      </header>
      <slot />
    </main>
    <style is:global>
      body {
        display: flex;
      }
      @media print {
        header {
          display: none !important;
        }
        footer {
          display: none !important;
        }
      }
      a {
        color: crimson;
        text-decoration: underline dotted;
      }
      main {
        width: 100%;
      }
    </style>
  </body>
</html>
